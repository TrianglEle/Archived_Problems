#:kivy 2.0.0
WindowManager:
    MainWindow:
    SecondWindow:

<MainWindow>:
    name: "Main"
    password: passw

    GridLayout:
        cols: 1
        GridLayout:
            cols: 2

            Label:
                text: "Password: "
            
            TextInput:
                id: passw
                multiline: False
        
        Button:
            text:"Submit"
            on_release: app.root.current = "second" if passw.text == "Password" else "Main" ; root.clear() ; root.manager.transition.direction = "left"


<SecondWindow>:
    name: "second"

    Button:
        text: "This is a secret \n Press to go back"
        on_release:
            app.root.current = "Main"
            root.manager.transition.direction = "right"